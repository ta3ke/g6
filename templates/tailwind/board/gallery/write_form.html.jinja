{% extends "base.html.jinja" %}
 {% import editor_macro(request) as editor %}
{% if
  request.query_params.get("parent_id") %}
  {% set action = "답변" %}
{% else %}
  {%
  set action="수정" if write.wr_id else "쓰기" %}
{% endif %}
{% block head %}
  {{ editor.head() }}
{% endblock head %}
{% block title %}
  {{ board.subject }} 글 {{
  action }}
{% endblock title %}
{% block subtitle %}
  {{ board.subject }} 글 {{
  action }}
{% endblock subtitle %}
{% block content %}
  {% set
  login_member=request.state.login_member %}
  {% set
  is_admin=get_admin_type(request, login_member.mb_id, board=board) %}
  {% set
  bo_table_width=board.bo_table_width if board.bo_table_width > 0 else 100 %}
  <section id="bo_w" class="fs-4">
    <!-- 게시물 작성/수정 시작 { -->
    <form name="fwrite"
          id="fwrite"
          action="/board/write_update/{{ board.bo_table }}"
          method="post"
          enctype="multipart/form-data"
          onsubmit="return fwrite_submit(this);"
          autocomplete="off"
          style="width:{{ bo_table_width }}
                 {% if bo_table_width <= 100 %}
                   %
                 {% else %}
                   px
                 {% endif %}">
      <input type="hidden" name="uid" value="{{ get_unique_id(request) }}" />
      <input type="hidden" name="wr_id" value="{{ write.wr_id }}" />
      <input type="hidden"
             name="parent_id"
             value="{{ request.query_params.parent_id }}" />
      <input type="hidden" name="token" value="" />
      {% if categories %}
        <div class="bo_w_select position-relative my-3">
          <label for="ca_name" class="blind">
            분류<strong>필수</strong>
          </label>
          <select name="ca_name" id="ca_name" required="">
            <option value="">분류를 선택하세요</option>
            {% for category in categories %}
              <option
                value="{{ category }}"
                {{ get_selected(write.ca_name,
                                category) 
                }}
                >
                {{ category }}
              </option>
            {% endfor %}
          </select>
        </div>
      {% endif %}
      {% if not login_member or (is_admin and write and write.mb_id !=
        login_member.mb_id) %}
        <div class="bo_w_info position-relative row g-3 my-3">
          <div class="col-6">
            <label for="wr_name" class="blind">
              이름<strong>필수</strong>
            </label>
            <input type="text"
                   name="wr_name"
                   value="{{ write.wr_name if write else login_member.mb_name }}"
                   id="wr_name"
                   required
                   class="frm_input w-100 required"
                   maxlength="20"
                   placeholder="이름" />
          </div>
          <div class="col-6">
            <label for="wr_password" class="blind">
              비밀번호<strong>필수</strong>
            </label>
            <input type="password" name="wr_password" id="wr_password" {{ "required"
              if write else "" }} class="frm_input w-100 {{ "required" if write else
              "" }}" maxlength="20" placeholder="비밀번호">
            </div>
            <div class="col-6">
              <label for="wr_email" class="blind">이메일</label>
              <input type="email"
                     name="wr_email"
                     value="{{ write.wr_email if write else login_member.mb_email }}"
                     id="wr_email"
                     class="frm_input w-100 email"
                     maxlength="100"
                     placeholder="이메일" />
            </div>
            <div class="col-6">
              <label for="wr_homepage" class="blind">홈페이지</label>
              <input type="text"
                     name="wr_homepage"
                     value="{{ write.wr_homepage if write else login_member.mb_homepage }}"
                     id="wr_homepage"
                     class="frm_input w-100"
                     placeholder="홈페이지" />
            </div>
          </div>
        {% endif %}
        <div class="position-relative my-3">
          <span class="blind">옵션</span>
          <ul class="p-0">
            {% if is_notice %}
              <li class="chk_box d-inline-block text-start me-2">
                <input
                  type="checkbox"
                  id="notice"
                  name="notice"
                  class="selec_chk"
                  value="1"
                  {{
                  notice_checked
                  }}
                  />
                  <label for="notice">
                    <span>&nbsp;</span>공지
                  </label>
                </li>
              {% endif %}
              {% if is_html %}
                <li class="chk_box d-inline-block text-start me-2">
                  {% if not board.bo_use_dhtml_editor %}
                    <input
                      type="checkbox"
                      id="html"
                      name="html"
                      onclick="html_auto_br(this);"
                      class="selec_chk"
                      value="{{ html_value }}"
                      {{
                      html_checked
                      }}
                      />
                      <label for="html">
                        <span>&nbsp;</span>html
                      </label>
                    {% else %}
                      <input type="hidden" name="html" value="html1" />
                    {% endif %}
                  </li>
                {% endif %}
                {% if is_secret %}
                  {% if is_admin or is_secret == 1 %}
                    <li class="chk_box d-inline-block text-start me-2">
                      <input
                        type="checkbox"
                        id="secret"
                        name="secret"
                        class="selec_chk"
                        value="secret"
                        {{
                        secret_checked
                        }}
                        />
                        <label for="secret">
                          <span>&nbsp;</span>비밀글
                        </label>
                      </li>
                    {% else %}
                      <input type="hidden" name="secret" value="secret" />
                    {% endif %}
                  {% endif %}
                  {% if is_mail %}
                    <li class="chk_box d-inline-block text-start me-2">
                      <input
                        type="checkbox"
                        id="mail"
                        name="mail"
                        class="selec_chk"
                        value="mail"
                        {{
                        recv_email_checked
                        }}
                        />
                        <label for="mail">
                          <span>&nbsp;</span>답변메일받기
                        </label>
                      </li>
                    {% endif %}
                  </ul>
                </div>
                <div class="position-relative my-3">
                  <label for="wr_subject" class="blind">
                    제목<strong>필수</strong>
                  </label>
                  <div id="autosave_wrapper" class="d-flex justify-content-between my-3">
                    <input type="text"
                           name="wr_subject"
                           value="{{ write.wr_subject }}"
                           id="wr_subject"
                           required
                           class="frm_input full_input me-2 required"
                           size="50"
                           maxlength="255"
                           placeholder="제목" />
                    {% if login_member %}
                      <script src="/static/js/autosave.js"></script>
                      <button type="button" id="btn_autosave_list" class="btn_frmline">
                        임시 저장된 글 (<span id="autosave_count">0</span>)
                      </button>
                      <div id="autosave_pop">
                        <strong>임시 저장된 글 목록</strong>
                        <ul>
                          &nbsp;
                        </ul>
                        <div>
                          <button type="button" class="autosave_close">닫기</button>
                        </div>
                      </div>
                    {% endif %}
                  </div>
                </div>
                <!-- TODO: editor.body 영역 HTML 수정 필요 -->
                <div class="position-relative my-3">
                  <label for="wr_content" class="blind">
                    내용<strong>필수</strong>
                  </label>
                  <div class="wr_content">
                    {% if write_min and write_max %}
                      <p id="char_count_desc" class="d-block mb-2 p-0">
                        이 게시판은 최소 <strong>{{ write_min }}</strong>글자 이상, 최대
                        <strong>{{ write_max }}</strong>글자 이하까지 글을 쓰실 수 있습니다.
                      </p>
                    {% endif %}
                    {% if write_min and write_max %}
                      <div id="char_count_wrap">
                        <span id="char_count"></span>글자
                      </div>
                    {% endif %}
                  </div>
                </div>
                {{ editor.body("wr_content", write.wr_content) }}
                {% if is_link %}
                  {% for i
                    in range(1, 3) %}
                    <div class="bo_w_link position-relative my-3">
                      <label for="wr_link{{ i }}"
                             class="position-absolute top-50 translate-middle-y start-0 fs-3 text-center px-3"
                             style="color: #b2b2b2">
                        <i class="fa fa-link" aria-hidden="true"></i><span class="blind">링크 #{{ i }}</span>
                      </label>
                      <input type="text"
                             name="wr_link{{ i }}"
                             value="{{ getattr(write, "wr_link" ~ i, "") }}"
                             id="wr_link{{ i }}"
                             class="frm_input full_input"
                             style="padding-left: 50px"
                             size="50" />
                    </div>
                  {% endfor %}
                {% endif %}
                {% if is_file %}
                  {% for file in files %}
                    {% set i = loop.index %}
                    <div class="bo_w_flie position-relative my-3">
                      <div class="frm_input">
                        <label for="bf_file_{{ i }}"
                               class="position-absolute top-50 translate-middle-y start-0 fs-3 text-center px-3"
                               style="color: #b2b2b2">
                          <i class="fa fa-folder-open" aria-hidden="true"></i><span class="blind">파일 #{{ i }}</span>
                        </label>
                        <input type="file"
                               name="bf_file[]"
                               id="bf_file_{{ i }}"
                               title="파일첨부{{ i }} : 용량 {{ board.bo_upload_size }} 바이트 이하만 업로드 가능"
                               class="mt-1"
                               style="padding-left: 50px" />
                      </div>
                      {% if is_file_content %}
                        <input type="text"
                               name="bf_content[]"
                               value="{{ file.bf_content|default("", true) }}"
                               title="파일 설명을 입력해주세요."
                               class="full_input frm_input"
                               size="50"
                               placeholder="파일 설명을 입력해주세요." />
                      {% endif %}
                      {% if file.bf_no != None %}
                        <span class="position-absolute fs-5"
                              style="top: 10px;
                                     right: 10px;
                                     color: #7d7d7d">
                          <input type="checkbox"
                                 id="bf_file_del{{ i }}"
                                 name="bf_file_del[]"
                                 value="{{ file.bf_no }}" />
                          <label for="bf_file_del{{ i }}">
                            <span class="elip" title="{{ file.bf_source }}">{{ file.bf_source }}</span>
                            ({{ file.bf_filesize|filesizeformat }}) 파일 삭제
                          </label>
                        </span>
                      {% endif %}
                    </div>
                  {% endfor %}
                {% endif %}
                <!-- Captcha Start -->
                {% if is_use_captcha %}

                  {% include captcha_widget(request) ignore missing %}

                {% endif %}
                <!-- Captcha End -->
                <div class="btn_confirm position-relative my-3 text-end">
                  <a href="{{ url_for('list_post', bo_table=board.bo_table) |set_query_params(request, remove=['parent_id']) }}"
                     class="btn px-4 fs-4 rounded-2 bg-secondary text-white">취소</a>
                  <button type="submit"
                          id="btn_submit"
                          accesskey="s"
                          class="btn px-4 fs-4 rounded-2 main-bg text-white">작성완료</button>
                </div>
              </form>
              <script>
                {
                  %
                  if write_min and write_max %
                }
                // 글자수 제한
                var char_min = parseInt({
                  {
                    write_min
                  }
                }); // 최소
                var char_max = parseInt({
                  {
                    write_max
                  }
                }); // 최대
                check_byte("wr_content", "char_count");

                $(function() {
                  $("#wr_content").on("keyup", function() {
                    check_byte("wr_content", "char_count");
                  });
                });
                {
                  % endif %
                }

                function html_auto_br(obj) {
                  if (obj.checked) {
                    result = confirm("자동 줄바꿈을 하시겠습니까?\n\n자동 줄바꿈은 게시물 내용중 줄바뀐 곳을<br />태그로 변환하는 기능입니다.");
                    if (result) {
                      obj.value = "html2";
                    } else {
                      obj.value = "html1";
                    }
                  } else {
                    obj.value = "";
                  }
                }

                function fwrite_submit(f) {
                  if (document.getElementById("char_count")) {
                    if (char_min > 0 || char_max > 0) {
                      var cnt = parseInt(check_byte("wr_content", "char_count"));
                      if (char_min > 0 && char_min > cnt) {
                        alert("내용은 " + char_min + "글자 이상 쓰셔야 합니다.");
                        return false;
                      } else if (char_max > 0 && char_max < cnt) {
                        alert("내용은 " + char_max + "글자 이하로 쓰셔야 합니다.");
                        return false;
                      }
                    }
                  }

                  // captcha 사용시
                  if (typeof check_captcha === "function") {
                    if (!check_captcha(f)) {
                      return false;
                    }
                  }

                  f.token.value = generate_token();
                  f.action += "?{{ request.query_params|safe }}"

                  document.getElementById("btn_submit").disabled = true;

                  return true;
                }
              </script>
              <!-- } 게시물 작성/수정 끝 -->
            </section>
          {% endblock content %}
